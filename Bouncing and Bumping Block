import tkinter as tk


WIDTH = 600
HEIGHT = 400
BLOCK_SIZE = 40
SPEED_X = 5
SPEED_Y = 4


class BouncingBlockApp:
    def __init__(self, root):
        self.root = root
        root.title("Bouncing Block")

        self.canvas = tk.Canvas(root, width=WIDTH, height=HEIGHT, bg="#111")
        self.canvas.pack()

        # Block
        self.block = self.canvas.create_rectangle(
            50, 50,
            50 + BLOCK_SIZE, 50 + BLOCK_SIZE,
            fill="#4CAF50"
        )

        self.dx = SPEED_X
        self.dy = SPEED_Y

        self.bum_text = None

        self.animate()

    def animate(self):
        self.canvas.move(self.block, self.dx, self.dy)
        x1, y1, x2, y2 = self.canvas.coords(self.block)

        collision = False

        if x1 <= 0 or x2 >= WIDTH:
            self.dx = -self.dx
            collision = True

        if y1 <= 0 or y2 >= HEIGHT:
            self.dy = -self.dy
            collision = True

        if collision:
            self.show_bum()

        self.root.after(20, self.animate)

    def show_bum(self):
        if self.bum_text is not None:
            return  # already showing

        self.bum_text = self.canvas.create_text(
            WIDTH // 2,
            HEIGHT // 2,
            text="BUM",
            font=("Segoe UI", 40, "bold"),
            fill="red"
        )

        # remove after 2 seconds
        self.root.after(2000, self.clear_bum)

    def clear_bum(self):
        if self.bum_text:
            self.canvas.delete(self.bum_text)
            self.bum_text = None


if __name__ == "__main__":
    root = tk.Tk()
    app = BouncingBlockApp(root)
    root.mainloop()
